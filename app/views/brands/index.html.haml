/ Slideshow
.container-fluid.nopadding
  .row
    .col-sm-12
      #slideshow.owl-carousel{:style => "opacity: 1;"}
        .item
          %img{:alt => "", :src => "img/top_pic1.jpg"}/
        .item
          %img{:alt => "", :src => "img/top_pic4.jpg"}/
        .item
          %img{:alt => "", :src => "img/top_pic2.jpg"}/
        .item
          %img{:alt => "", :src => "img/top_pic7.jpg"}/


.container.showcase
  .row
    .col-sm-6
      %h1 Brand List
    .col-sm-6
      = search_form_for @q do |f|
        .input-search
          = f.search_field :name_cont, class: "form-control"
          -# %input#button-search.btn.btn-default{:type => "button", :value => "Search"}
          = f.submit "Search", class: "btn btn-default"
  .row
    -@brands.each do |brand|
      .product-grid.col-xs-6.col-sm-3
        .product-thumb{"data-sr" => ""}
          %figure
            .image
              =link_to brand_path(brand) do
                =image_tag brand.image_logo_url(:logo), class: 'img-responsive'
            %figcaption
              .name
                =link_to brand.name, brand_path(brand)
                -# %a{:href => "#"} Oversized Shirt
              .price
                =brand.country


