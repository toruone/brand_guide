.container
  %ul.breadcrumb
    %li
      %a{:href => "/"}
        %i.icon.ion-ios-home-outline
    %li
      Info Sites
  .row
    #content.col-sm-12
      %h2 Information Sites
      %br
      %br
      %table.table
        %thead
          %tr
            %td.text-center
            %td.text-left Name
            %td.text-left URL
            %td.text-right For
            %td.text-left Description
            %td.text-right
        -@info_sites.each do |info_site |
          %tbody
            %tr
              %td.text-center
                =link_to info_site_path(info_site) do
                  -# %a{:href => "#"}
                  =image_tag info_site.image_url(:small)
                  -# %img{:alt => "", :src => "assets/img/image_holder_x90.png", :width => "90"}/
                %td.text-left
                  =link_to info_site.name, info_site_path(info_site)
                %td.text-left=link_to info_site.url, info_site.url, target: "_blank"
                %td.text-right=info_site.for
                %td.text-left=info_site.description
                %td.text-right
