.container
  %ul.breadcrumb
    %li
      =link_to root_path do
        %i.icon.ion-ios-home-outline
    %li
      =link_to 'Sign Up', new_user_registration_path
  .row
    .col-sm-12
      %h1 Register Account
      %p
        If you already have account with us, please login at the
        = succeed "." do
          =link_to 'Login Page', new_user_session_path
      .form-horizontal
        %fieldset#account
          -# %legend Your personal details
          = bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = render "devise/shared/error_messages", resource: resource
            =f.form_group :email do
              =f.label :email, 'E-mail', class: 'col-sm-2 control-label required'
              .col-sm-10
                =f.email_field_without_bootstrap :email, placeholder: 'E-mail', class: 'form-control col-sm-5'
            =f.form_group :password do
              =f.label :password, 'Password', class: 'col-sm-2 control-label required'
              .col-sm-10
                =f.password_field_without_bootstrap :password, placeholder: 'Password(6 characters minimum))', class: 'form-control col-sm-5'
            =f.form_group :password_confirmation do
              =f.label :password_confirmation, 'Password Confirm', class: 'col-sm-2 control-label required'
              .col-sm-10
                =f.password_field_without_bootstrap :password_confirmation, placeholder: 'Password(6 characters minimum))', class: 'form-control col-sm-5'
            .buttons
              .pull-right
                = f.submit "Sign up", class: 'btn btn-primary'
            = render "devise/shared/links"
